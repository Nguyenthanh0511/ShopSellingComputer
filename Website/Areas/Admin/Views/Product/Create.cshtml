@model Model.Entity.Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Product</h5>
        <!-- Horizontal Form -->
        <form asp-area="Admin" asp-controller="Product" asp-action="Create" method="post">
            <!-- Remove label for ID -->
            <div class="row mb-3">
                <div class="col-sm-2"></div>
            </div>
            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control" id="inputName">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <input asp-for="Description" type="text" class="form-control" id="inputName">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label">ImageURl</label>
                <div class="col-sm-10">
                    <input asp-for="ImageUrl" type="url" class="form-control" id="inputName">
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Price" class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-10">
                    <input asp-for="Price" type="number" class="form-control" id="inputName">
                </div>
            </div>
            <div class="text-center">
                <button type="submit" value="Thêm mới" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form><!-- End Horizontal Form -->
    </div>
</div>
