@model Model.Entity.Product
@inject ServiceComputer.Reponsive.IRepo.ICategoryRepo _categoryRepo;
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var categories = await _categoryRepo.GetAll();
}
<h1>Edit Category</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Category Information</h5>

        <!-- Horizontal Form -->
        <form asp-area="Admin" asp-controller="Product" asp-action="Update" method="post">
            <input asp-for="Id" type="hidden" />
            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Description" class="col-sm-2 col-form-label">Description</label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="ImageUrl" class="col-sm-2 col-form-label">ImageUrl</label>
                <div class="col-sm-10">
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Price" class="col-sm-2 col-form-label">Price</label>
                <div class="col-sm-10">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-10">
                <select asp-for="CategoryId" class="form-control">
                    <option value="">Select a category</option>
                    @foreach (var category in categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div> 
        </form><!-- End Horizontal Form -->
    </div>
</div>
@section scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}